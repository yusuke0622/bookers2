<div class="my-2">
     <h2>New book</h2>
 </div>
 
 <div class="form">
     <div class="form-group">
         <%= form_with model: book, method: :post  do |f| %>
              <div>
                  <%= f.label :Title %>
                  <%= f.text_field :title, class: 'form-control' %>
              </div>
              <div class="my-3">
                  <%= f.label :Opinion %>
                  <%= f.text_area :body, class: 'form-control' %>
              </div>
              <div>
                  <%= f.submit 'Create Book', class: 'btn btn-success' %>
              </div>
          <% end %>
     </div>
 </div>