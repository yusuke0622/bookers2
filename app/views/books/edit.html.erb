 <div class="container"> 
  <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-6 mx-auto px-5 px-sm-0">
      <div class="mb-2">
          <h2>Editing Book</h2>
      </div>
      <div>
       <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from bening saved:</h3>
        <ul>
         <%= @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
        <% end %>
      </div>
      
      <div class="form">
          <div class="form-group">
              <%= form_with model: @book  do |f| %>
                 <div>
                  <%= f.label :title %><br>
                  <%= f.text_field :title, class: "form-control", style: "width:100%" %>
                 </div>
                 <div class="mt-3">
                  <%= f.label :opinion %><br>
                  <%= f.text_area :body, class: "form-control", style: "width:100%" %>
                 </div>
                 <div>
                  <%= f.submit 'Update Book', class: 'btn btn-success my-3' %>
                 </div>
              <% end %>
              <%= link_to 'Show', book_path(@book.id) %>
              |
              <%= link_to 'Back', books_path %>
          </div><!--form-->
       </div><!--form-grouop-->
       
      </div><!--col--->
    </div><!--row--->
  </div><!--container--->