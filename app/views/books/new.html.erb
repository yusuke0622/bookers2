
 <div class="content-title">
     <h2>New book</h2>
 </div>
 
 <div class="form">
     <div class="form-group">
         <%= form_with model: @book, method: :post  do |f| %>
              <div>
                  <%= f.label :Title %>
                  <%= f.text_field :title %>
              </div>
              <div>
                  <%= f.label :Opinion %>
                  <%= f.text_area :body %>
              </div>
              <div>
                  <%= f.submit 'Create Book' %>
              </div>
          <% end %>
     </div>
 </div>