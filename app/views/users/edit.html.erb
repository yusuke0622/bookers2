 <div class="mb-2">
     <h2>User info</h2>
 </div>
 
 <div>
  <% if @user.errors.any? %>
   <%= @user.errors.count %>error prohibites this obj from being saved:
    <ul>
     <%= @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>
 </div>
 
 <div>
     <div>
         <div>
             <%= form_with model: @user do |f| %>
                 <label for="inputName">Name</label>
                 <%= f.text_field :name, id:"inputName" %>
                 <label for="inputImage">Image</label>
                 <%= f.file_field :profile_image, id:"inputImage", accept: "image/*"%>
                 <label for="inputIntroduction">Introduction</label>
                 <%= f.text_area :introduction, value: "" %>
                 <%= f.submit 'Update User' %>
             <% end %>
         </div>
     </div>
 </div>