
            <div class="mb-2">
                 <h2>User info</h2>
             </div>
            
             <div>
                 <%= image_tag user.get_profile_image(150,150) %>
                 <table class="table">
                     <tbody>
                         <tr>
                             <th>name</th>
                             <th><%= user.name %></th>
                         </tr>
                         <tr>
                             <th>introduction</th>
                             <th><%= user.introduction %></th>
                         </tr>
                     </tbody>
                 </table>
                 
                     <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
                         <span class="fas fa-user-cog"></span>
                     <% end %>
                
             </div>
             
